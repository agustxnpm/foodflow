{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "FoodFlow",
  "version": "0.1.0",
  "identifier": "com.meiser.foodflow",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "FoodFlow - Meiser Sandwicheria",
        "width": 1280,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      }
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": ["binaries/*"],
    "externalBin": [
      "binaries/backend"
    ],
    "windows": {
      "wix": {
        "language": "es-ES"
      },
      "nsis": {
        "languages": ["Spanish"]
      }
    }
  },
  "plugins": {},
  "allowlist": {
    "all": false,
    "shell": {
      "all": false,
      "execute": true,
      "sidecar": true,
      "open": false
    },
    "http": {
      "all": false,
      "request": true,
      "scope": [
        "http://localhost:8080/**",
        "http://127.0.0.1:8080/**"
      ]
    },
    "protocol": {
      "asset": true,
      "assetScope": ["**"]
    }
  }
}
